// .vuepress/override.styl
// colors
//$accentColor = #366796 Medium Blue
//$accentColor = #2e5a85 Dark Blue
$accentColor = #8bd0ff
$textColor = #2c3e50
$borderColor = #eaecef
$codeBgColor = #282c34
$arrowBgColor = #ccc

// layout
$navbarHeight = 4.8rem
$sidebarWidth = 18rem
$contentWidth = 740px

// responsive breakpoints
$MQNarrow = 959px
$MQMobile = 719px
$MQMobileNarrow = 419px

// sidebar heading text color
.sidebar-heading
  font-weight 500 !important
  &.open, &:hover
    color $accentColor

// text headings color
h1, h2, h3, h4, h5, h6
  &:hover
    color $accentColor

.arrow
  display none

.icon
  &.outbound
    display none
